<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LucidDreamProvider.MainPage"
             BackgroundColor="Black"
             Title="Lucid Dream Provider">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="CenterAndExpand">

            <!-- Interval Input -->
            <Label Text="Interval (minutes)"
                   TextColor="White"
                   FontSize="Medium"
                   HorizontalOptions="Center" />
            <Entry x:Name="IntervalInput"
                   Placeholder="Enter minutes"
                   Keyboard="Numeric"
                   TextColor="White"
                   BackgroundColor="#333"
                   WidthRequest="150"
                   HorizontalOptions="Center" />

            <!-- Pattern Selection -->
            <Label Text="Select Vibration Pattern"
                   TextColor="White"
                   FontSize="Medium"
                   HorizontalOptions="Center" />
            <Picker x:Name="PatternPicker"
                    Title="Choose Pattern"
                    TextColor="White"
                    BackgroundColor="#333"
                    WidthRequest="150"
                    HorizontalOptions="Center">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Short-Long-Short</x:String>
                        <x:String>Heartbeat</x:String>
                        <x:String>Triple Pulse</x:String>
                        <x:String>Steady</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- Start Button -->
            <Button Text="Start Vibration"
                    Clicked="OnStartVibration"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="120"
                    HorizontalOptions="Center" />

            <!-- Stop Button -->
            <Button Text="Stop Vibration"
                    Clicked="OnStopVibration"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="120"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
